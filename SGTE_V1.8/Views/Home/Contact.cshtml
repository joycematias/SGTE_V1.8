@{
    ViewBag.Title = "Contact";
}
<header class="headercontato">

    <div class="row">
        <div class="col-xs-8 col-md-4"></div>
        <div class="col-xs-8 col-md-4">
            <div class="panel panel-default" id="contatopanel">
                <div class="panel-body">
                    <div class="page-header">
                        <h1><span class="glyphicon glyphicon-leaf"></span> Contato</h1>
                        <hr />
                        <form method="post" role="form">

                            <div class="form-group">
                                <label for="nome">Nome</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                    <input type="text" class="form-control" placeholder="Entre com o nome" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="email">Email</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-send"></span></span>
                                    <input type="text" class="form-control" placeholder="Entre com seu email" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="telefone">Telefone</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-phone"></span></span>
                                    <input type="text" class="form-control" placeholder="Entre com o telefone" name="tel" maxlength="12" onkeypress="formatar('##-####-####', this)"  />
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="assunto"> Assunto: </label>
                                <select class="selectpicker" data-live-search="true" id="assunto">
                                    <option>Elogio</option>
                                    <option>Sugestão</option>
                                    <option>Critica</option>
                                    <option>Pagamento</option>
                                    <option>Suporte do Sistema</option>
                                </select>

                            </div>

                            <div class="form-group">
                                <label for="area">Comentario</label>
                                <textarea class="form-control" id="area"></textarea>
                            </div>

                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                <div class="btn btn-default">Mais informações </div>
                            </a>
                            <div id="collapseOne" class="panel-collapse collapse">
                                <div class="col-sm-offset-1" id="sac">
                                    <br>
                                    <h2><span class="glyphicon glyphicon-phone-alt"></span>  Fale Conosco </h2>
                                    <hr />
                                    <h3>Telefone</h3>
                                    <h4>(11) 3932-9983</h4>
                                    <h4>(11) 99932-9780</h4>
                                    <hr />
                                    <h3>Email</h3>
                                    <h4>contato@sgtetransporte.com.br</h4>

                                </div>
                            </div>

                            <br />
                            <br />
                            <div class="btn-group col-md-offset-10">
                                <button type="submit" class="btn btn-sample">Enviar</button>
                            </div>

                            

</form>
                    </div>
                </div>
            </div>
        </div>
       

    </div>
   


    <script type="text/javascript">
        $(function () {
            $('.selectpicker').selectpicker();
        });

    </script>

    <script>
    function formatar(mascara, documento) {
        var i = documento.value.length;
        var saida = mascara.substring(0, 1);
        var texto = mascara.substring(i)

        if (texto.substring(0, 1) != saida) {
            documento.value += texto.substring(0, 1);
        }

    }
    </script>

</header>

