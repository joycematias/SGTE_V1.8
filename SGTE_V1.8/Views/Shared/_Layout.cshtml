<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" href="~/Content/img/iconbar.png" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/ScriptSite.js"></script>



</head>

<body>
    <!-- Primeira Parte do Header -->

    <section class="navbar">
        <div class="navbar-header">
            <nav class="navbar navbar-inverse navbar-fixed-top " role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>


                    <a href="#" class="navbar-brand">
                        <img class="desktop-logo" src="~/Content/img/logo4.png" height="40" width="135" alt="Company title">
                    </a>

                </div>
                <div class="collapse navbar-collapse" id="collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Sobre", "About", "Home")</li>

                        <li>@Html.ActionLink("Contato", "Contact", "Home")</li>

                        <li class="navbar-form navbar-right">
                            <div class="form-group">





                                @Html.ActionLink("Acessar", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn btn-sample" })

                            </div>

                        </li>
                    </ul>
                </div>

            </nav>
        </div>

    </section>



    @RenderBody()



    <div id="wrapper">

        <div id="footerNav" class="container">


            <img class="desktop-logo" src="~/Content/img/logo4.png" height="35" width="120">
            <br>
            <br>
            <h6>Navegue por</h6>
            <ul class="navbar-nav">

                <li><a href="#"><strong>Home</strong></a></li>
                <li><a href="#"><strong>Sobre</strong></a></li>
                <li><a href="#"><strong>Equipe</strong></a></li>
                <li><a href="#"><strong>Contato</strong> </a></li>

            </ul>
            <div class="social">

                <a class="social-icons" href="#"><img src="~/Content/img/google.png" height="64" width="64" /></a>
                <a class="social-icons" href="#"><img src="~/Content/img/skype.png" height="64" width="64" /></a>
                <a class="social-icons" href="https://www.facebook.com/pages/SGTE/398533150300654"><img src="~/Content/img/facebook.png" height="64" width="64" /></a>
                <a class="social-icons" href="#"><img src="~/Content/img/twitter.png" height="64" width="64" /></a>
            </div>

            <br>

            <h5 class="text-center">Copyright © SGTE 2014</h5>


        </div>



    </div>




    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>