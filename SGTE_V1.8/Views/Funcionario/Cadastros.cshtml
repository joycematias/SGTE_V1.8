    <div class="container">

        <section>
            <center><span class="glyphicon glyphicon-search">Cadastros</span></center>
        </section>
        <br>
        <div class="container">
            <h4>
                Que tipo de cadastro deseja realizar?
            </h4>
        </div>
        <section>
            <br />
            <br />

        </section>


        <center>
            <div class="container">
                <section>


                    <div class="container" style="margin-top: 100px; margin-bottom: 100px;">


                        <div class="row">
                            <div class="row step">

                                <a href="/Funcionario/Create">
                                    <div id="div1" class="col-md-2" onclick="javascript: resetActive(event);">
                                        <span class="glyphicon glyphicon-user"></span>
                                        <p>Funcionario</p>
                                    </div>
                                </a>


                                <a href="/Cliente/Create">
                                    <div class="col-md-2 activestep" onclick="javascript: resetActive(event);">
                                        <span class="glyphicon glyphicon-user"></span>
                                        <p>Cliente</p>
                                    </div>
                                </a>
                                <a href="/Aluno/Create">
                                    <div class="col-md-2" onclick="javascript: resetActive(event);">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                        <p>Aluno</p>
                                    </div>
                                </a>

                                <a href="/Escola/Create">
                                    <div class="col-md-2" onclick="javascript: resetActive(event);">
                                        <span class="glyphicon glyphicon-home"></span>
                                        <p>Escola</p>
                                    </div>
                                </a>

                                <a href="/Motorista/Create">
                                    <div class="col-md-2" onclick="javascript: resetActive(event);">
                                        <span class="glyphicon glyphicon-user"></span>
                                        <p>Motorista</p>
                                    </div>
                                </a>

                                <a href="/Veiculo/Create">
                                    <div id="last" class="col-md-2" onclick="javascript: resetActive(event);">
                                        <span class="glyphicon glyphicon-inbox"></span>
                                        <p>Veiculo</p>
                                    </div>
                                </a>
                            </div>
                        </div>

                    </div>

                </section>
            </div>
        </center>
    </div>



</div>

<center>
    @Html.ActionLink("Voltar", "Index", "Funcionario", null, new { @class = "btn btn-sample" })
</center>



